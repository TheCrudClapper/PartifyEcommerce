@using CSOS.UI.ViewModels.HomePageViewModels
@{
    ViewBag.Title = "Home";
    @model CSOS.UI.ViewModels.HomePageViewModels.IndexPageViewModel
}
@section Styles {
    <link rel="stylesheet" href="~/css/index-styles.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/index-script.js"></script>
}
<div class="container-fluid">
    @* Carousel with pictures *@
    <div class="position-relative hero-container">
        <img class="img-fluid hero-photo shadow w-100" src="~/images/hard-drive.jpg" alt="hero-section" />
    </div>
 
    @* Section about us *@
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">What We Offer</h2>
                <p class="text-muted">Discover our range of professional services tailored to your needs</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="service-card h-100 p-4">
                    <div class="icon-wrapper mb-4">
                        <svg width="32" height="32" fill="white" viewBox="0 0 16 16" class="bi bi-laptop">
                            <path d="M13.5 3a.5.5 0 0 1 .5.5V11H2V3.5a.5.5 0 0 1 .5-.5h11zm-11-1A1.5 1.5 0 0 0 1 3.5V12h14V3.5A1.5 1.5 0 0 0 13.5 2h-11zM0 12.5h16a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 12.5z" />
                        </svg>  
                    </div>
                    <h4 class="service-title text-center mb-3">Buy. Sell. Upgrade.</h4>
                    <p class="service-text text-center mb-0">
                        A place where your old parts get a second life—and someone else’s setup gets an upgrade.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card h-100 p-4">
                    <div class="icon-wrapper mb-4">
                        <svg width="32" height="32" fill="white" class="bi bi-signpost-fill" viewBox="0 0 16 16">
                            <path d="M7.293.707A1 1 0 0 0 7 1.414V4H2a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h5v6h2v-6h3.532a1 1 0 0 0 .768-.36l1.933-2.32a.5.5 0 0 0 0-.64L13.3 4.36a1 1 0 0 0-.768-.36H9V1.414A1 1 0 0 0 7.293.707" />
                        </svg>
                    </div>
                    <h4 class="service-title text-center mb-3">Clean & Direct</h4>
                    <p class="service-text text-center mb-0">
                        Buy and sell computer components with ease. Simple, fast, and for everyone.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card h-100 p-4">
                    <div class="icon-wrapper mb-4">
                        <svg width="32" height="32" fill="white" class="bi bi-person-arms-up" viewBox="0 0 16 16">
                            <path d="M8 3a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3" />
                            <path d="m5.93 6.704-.846 8.451a.768.768 0 0 0 1.523.203l.81-4.865a.59.59 0 0 1 1.165 0l.81 4.865a.768.768 0 0 0 1.523-.203l-.845-8.451A1.5 1.5 0 0 1 10.5 5.5L13 2.284a.796.796 0 0 0-1.239-.998L9.634 3.84a.7.7 0 0 1-.33.235c-.23.074-.665.176-1.304.176-.64 0-1.074-.102-1.305-.176a.7.7 0 0 1-.329-.235L4.239 1.286a.796.796 0 0 0-1.24.998l2.5 3.216c.317.316.475.758.43 1.204Z" />
                        </svg>
                    </div>
                    <h4 class="service-title text-center mb-3">Edgy & Techy</h4>
                    <p class="service-text text-center mb-0">
                        List your gear. Find hidden gems. Join the future of second-hand hardware.
                    </p>
                </div>
            </div>
        </div>
    </div>

    @* Section with categories from shop *@
    <div class="container mt-4" id="allCategories">
        <div class="row align-items-center justify-content-between">
            <div class="col-auto">
                <p class="display-3 fs-4">Our Categories</p>
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary me-2 scrollButton" id="categoryScrollLeft">
                    <i class="fa fa-chevron-left"></i>
                </button>
                <button class="btn btn-outline-secondary scrollButton" id="categoryScrollRight">
                    <i class="fa fa-chevron-right"></i>
                </button>
            </div>
        </div>
        @await Html.PartialAsync("_CategoryScrollerPartial", Model.CategoriesSlider)
    </div>

    @* Freashly added offers *@
    <div class="container">
        <div class="row mt-3 align-items-center justify-content-between">
            <div class="col-auto">
                <p class="display-3 fs-4 mb-0">Freshly added</p>
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary me-2 scrollButton" id="freshScrollLeft">
                    <i class="fa fa-chevron-left"></i>
                </button>
                <button class="btn btn-outline-secondary scrollButton" id="freshScrollRight">
                    <i class="fa fa-chevron-right"></i>
                </button>
            </div>
        </div>

        @await Html.PartialAsync("_ProductScrollerPartial", new ProductScrollerViewModel
   {
       IdPrefix = "freshCarousel",
       Items = Model.Cards
   })
    </div>

    @* Featured Offers *@
    <div class="container mb-3">
        <div class="row mt-3 align-items-center justify-content-between">
            <div class="col-auto">
                <p class="display-3 fs-4 mb-0">Featured Offers</p>
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary me-2 scrollButton" id="featuredScrollLeft">
                    <i class="fa fa-chevron-left"></i>
                </button>
                <button class="btn btn-outline-secondary scrollButton" id="featuredScrollRight">
                    <i class="fa fa-chevron-right"></i>
                </button>
            </div>
        </div>
        @await Html.PartialAsync("_ProductScrollerPartial", new ProductScrollerViewModel
       {
           IdPrefix = "featuredCarousel",
           Items = Model.Cards
       })
    </div>

    @* Deals of the day section*@
    <div class="container-fluid best-deals-container">
        <div class="container text-white">
            <div class="row justify-content-end">
                <div class="col-auto mt-3">
                    <button class="btn btn-outline-light me-2 scrollButton" id="dealsScrollLeft">
                        <i class="fa fa-chevron-left"></i>
                    </button>
                    <button class="btn btn-outline-light scrollButton" id="dealsScrollRight">
                        <i class="fa fa-chevron-right"></i>
                    </button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-2 d-flex align-items-center justify-content-center flex-column">
                    <h2 class="fw-bold">Deals of<br /> the Day</h2>
                    <h3 id="clock">08:21:17</h3>
                </div>
                <div class="col-10">
                    @await Html.PartialAsync("_ProductScrollerPartial", new ProductScrollerViewModel
                   {
                       IdPrefix = "dealsCarousel",
                       Items = Model.BestDeals
                   })
                </div>
            </div>  
        </div>
    </div>

    @* Best in X Category - for now static*@
    <div class="container">
        <div class="row mt-3">
            <div class="col-sm-12 mt-2">
                <p class="display-3 fs-4">Best In CASE Category</p>
            </div>
        </div>
        <div class="row mt-2">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-2 mb-4">
                    <div class="card">
                        <img src="~/images/pc_case.jpg" class="card-img-top" alt="ram-image">
                        <div class="card-body text-start">
                            <h5 class="card-title item-price">250 PLN</h5>
                            <h6 class="card-title item-name">Shadow X2 Savio</h6>
                            <p>
                                @{
                                    int starsAmount = new Random().Next(1, 6);
                                    for (int j = 0; j < starsAmount; j++)
                                    {

                                        <i class="fa fa-star" aria-hidden="true"></i>

                                    }
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

